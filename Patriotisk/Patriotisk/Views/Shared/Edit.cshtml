@model Patriotisk.Models.Experiment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/PatriotiskLayout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Experiment</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Treatment" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Treatment" class="form-control" />
                <span asp-validation-for="Treatment" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Crop" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Crop" class="form-control" />
                <span asp-validation-for="Crop" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FieldName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FieldName" class="form-control" />
                <span asp-validation-for="FieldName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Year" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Opdater" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Tilbage til oversigt</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
