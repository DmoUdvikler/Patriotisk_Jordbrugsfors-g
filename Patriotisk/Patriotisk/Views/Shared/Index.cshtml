@model IEnumerable<Patriotisk.Models.Experiment>

@{
    ViewBag.Title = "Experiments";
}

<h2>Forsøg</h2>
<p>
    @Html.ActionLink("Opret nyt forsøg", "Create")
</p>
<table class="table">
    <tr>    
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Treatment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Crop)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FieldName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>      
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Treatment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Crop)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FieldName)
            </td>

            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id.ToString() }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id.ToString() })
            </td>
        </tr>
    }

</table>